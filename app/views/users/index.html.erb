<ul>
  <% @users.each do |user| %>

  <li class="list-group-item">
    <%= image_tag "http://via.placeholder.com/60x60", class: "img-circle" %>
    <%= link_to user.login, user %> |
    <%= link_to "Edit", edit_user_path(user)%> |
    <%= link_to "Delete", user_path(user), method: :delete, data: {confirm: "R u sure?"} %>
    <button class="btn btn-primary follow">Follow</button>
  </li>
  <% end %>
</ul>
