<% if @user.errors.any? %>
<ul>
  <% @user.errors.full_messages.each do |m| %>
  <li><%= m %></li>
</ul>
  <% end %>

<% end %>

<%= form_for @user do |f| %>




  <%= f.text_field :login %>
  <%= f.text_field :email %>
  <%= f.password_field :password %>
  <%= f.file_field :avatar %>
  <%= f.submit "Sign_up" %>

<% end %>
