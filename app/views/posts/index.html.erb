<style type="text/css">
  .post {
    background: white;
    margin-top: 10px;
    border: 1px solid rgb(230, 230, 230);
    display: block;
  }
</style>

<div class="col-md-6 col-md-offset-3 text-center">
  <% @posts.reverse_each do |post| %>
    <% if not post.user.avatar.url == "/images/original/missing.png" %>
      <% dolt = post.user.avatar.url(:thumb) %>
    <% else %>
      <% dolt = "http://via.placeholder.com/100x100" %>
    <% end %>
      <div class="post">
        <div class="row">
          <%= link_to (image_tag dolt, height: '35', class: 'img-circle'), users_path+"/"+post.user.id.to_s %>
          <b><%= post.user.login %></b>
        </div>
        <div class="row">
          <%= image_tag post.image(:large) %>
        </div>

        <div class="row">
          <p> <%= post.description %> </p>
        </div>
      </div>
      <!-- <%= post.user_id %> -->

  <% end %>
</div>
